@using AgroPlan.Web.Models.Season
@model ManageViewModel

@{
    ViewData["Title"] = "Sezon " + Model.Name;
}

<!--- Content -->
<div class="row">
    <partial name="_MenuPartial" />
    <div class="col-md-10">
        <div class="container-md mx-4">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <hr />

            <!-- Status message -->
            @if (TempData["Message"] != null)
            {
                <partial name="_StatusMessage" model="@TempData["Message"].ToString()" />
            }
        <div class="text-center">
            @Html.ActionLink("Wnioski", "Manage", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Uprawy", "Index","Plan", new { seasonId = Model.Id }, new { @class = "btn btn-default" })
            @Html.ActionLink("Podsumowanie", "Manage", new { id = Model.Id }, new { @class = "btn btn-success" })
        </div>
        </div>
    </div>
</div>
<!--- End content -->



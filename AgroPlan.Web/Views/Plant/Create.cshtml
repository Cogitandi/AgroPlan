@model AgroPlan.Web.Models.Plant.CreatePlantViewModel
<div class="modal-body mx-3">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EfaNitrogenRate" class="control-label"></label>
            <input asp-for="EfaNitrogenRate" class="form-control" />
            <span asp-validation-for="EfaNitrogenRate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Dodaj" class="btn btn-outline-primary btn-block buttonAdd" />
        </div>
    </form>
</div>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}